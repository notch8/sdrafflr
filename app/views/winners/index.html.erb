<div class="container">
  <div class="heading-winners">
    <h1>Previous Winners</h1>
  </div>
  <h2><% @raffle.each_slice(1) do |raffles| %></h2>
  <div class="row">



      <% raffles.each do |raffle| %>
    <div class="col-md-4">
         <h2><%= raffle.title %> Winners</h2>
         <h4><%= raffle.created_at.strftime("%d %b. %Y") =%></h4>
           <% if raffle.winners %>
             <ol>
               <% raffle.winners.each do |winner|%>
                 <li>
                   <%= winner.name %>
                 </li>
               <% end %>
             </ol>
           <% end %>
        <% end %>
    </div>
      <% end %>



  </div>

</div>
